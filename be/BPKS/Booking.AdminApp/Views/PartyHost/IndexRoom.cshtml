@using BookingSolution.ViewModels.Common;
@model PagedResult<BookingSolution.ViewModels.Catalog.Rooms.RoomVm>
@{
    ViewData["Title"] = "IndexRoom";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}
@if (TempData["result"] != null)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @TempData["result"]
    </div>
}



<!-- Related Room Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-top:20px">
                <div class="section-title related__product__title row justify-content-center">
                    <div class="col-md-4 d-flex" style="margin-left:30px; margin-top:20px">
                        <button type="button" class="site-btn" onclick="location.href='@Url.Action("CreateRoom", "PartyHost")'">Create</button>
                    </div>
                    <div class="col-md-6 align-items-center d-flex">
                        <h2 class="d-inline-block m-0">Room List</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model.Items != null)
            {
                foreach (var room in Model.Items)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="@room.RoomUrl">
                                <!-- Các nút thêm vào yêu thích, chia sẻ, thêm vào giỏ hàng -->
                                <ulyy class="product__item__pic__hover">
                                    @* <li><a href="#"><i class="fa fa-heart"></i></a></li> *@
                                    @* <li><a href="#"><i class="fa fa-retweet"></i></a></li> *@

                                    @* <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li> *@
                                    @* <li>
                                        <a href="@Url.Action("DetailsRoom",new DetailsRoom{PartyId = Model.PartyId
                                        , RoomId = room.RoomId})"><i class="fa fa-shopping-cart"></i></a>
                                    </li> *@
                                </ulyy>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="#">Name:@room.RoomName</a></h6>
                                <!-- Giá của phòng -->
                                <h5>Price: @room.Price đ</h5>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- Related Room Section End -->

