@using BookingSolution.ViewModels.System.Users
@model LoginRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng nhập hệ thống</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                                <div class="card-body">
                                    <form asp-action="Index" asp-controller="Login" method="post" onsubmit="return validateLinks()">
                                        <div asp-validation-summary="All" class="text-danger"></div>

                                        <div class="form-group">
                                            <label class="small mb-1">Tài khoản</label>
                                            <input class="form-control py-4" required asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1">Mật khẩu</label>
                                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                                <label class="custom-control-label">Nhớ mật khẩu</label>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <div>
                                                <div>
                                                    <a id="registerLink" class="small col-12" href="/Login/Register">Đăng ký</a>
                                                    <br> <!-- Thẻ br để tạo ra một dòng mới -->
                                                    <a id="forgotPasswordLink" class="small col-12" href="/User/ForgotPassword">Bạn quên mật khẩu?</a>
                                                </div>

                                            </div>

                                            <button id="layoutAuthentication_content" class="btn btn-primary col-4" type="submit">Đăng nhập</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2019</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>

    <style>
        body.bg-gradient {
            background: linear-gradient(to bottom right, #007bff, #ff99cc); /* Gradient từ xanh sang hồng */
        }

        #layoutAuthentication_content {
            background: linear-gradient(to bottom right, #007bff, #ff99cc); /* Gradient từ xanh sang hồng */
        }

        function validateLinks() {
            var registerLink = document.getElementById("registerLink").value.trim();
            var forgotPasswordLink = document.getElementById("forgotPasswordLink").value.trim();
            if (registerLink === "" || forgotPasswordLink === "")

        {
            alert("Vui lòng nhập đầy đủ thông tin cho các liên kết.");
            return false;
            // Ngăn form được submit nếu có liên kết bị bỏ trống
        }

        return true; // Cho phép submit form nếu tất cả các liên kết đã được nhập đầy đủ
        }
    </style>
</body>
</html>