        <!-- Thêm mã JavaScript sau cùng -->
        <script>
            var data = new Array();
            var total = 0;
            $(document).ready(function () {
                updateTotal();

                // Sự kiện click nút "+" (tăng số lượng)
                $('.pro-qty .inc').on('click', function () {
                    // Gọi hàm cập nhật tổng giá
                    updateTotal();
                });

                // Sự kiện click nút "-" (giảm số lượng)
                $('.pro-qty .dec').on('click', function () {
                    // Gọi hàm cập nhật tổng giá
                    updateTotal();
                });

                // Sự kiện change input số lượng
                $('.pro-qty input').on('change', function () {
                    // Gọi hàm cập nhật tổng giá
                    updateTotal();
                });
            });

            // Hàm tính tổng giá
            function updateTotal() {
                var subtotal = 0;
                // Lặp qua mỗi sản phẩm trong giỏ hàng
                $('tbody tr').each(function () {
                    var price = parseFloat($(this).find('.shoping__cart__price').text().replace('$', ''));
                    var quantity = parseInt($(this).find('.pro-qty input').val());
                    var totalItem = price * quantity;

                var productid = parseInt($(this).find('.product__id__id').text().replace('$', ''));

                let index = data.findIndex(x => x.Productid == productid)

                if (index >= 0) {

                    data[index] = { Productid: productid, Quantity: quantity }
                } else if (index = -1) {
                    data.push({ Productid: productid, Quantity: quantity })
                }
                console.log(data);
                console.log($("RoomId").val());

                    // Cập nhật giá trị Total của từng sản phẩm
                    $(this).find('.shoping__cart__total').text('$' + totalItem.toFixed(2));
                    subtotal += totalItem;
                });
                // Hiển thị tổng giá sản phẩm
                $('#subtotal').text('$' + subtotal.toFixed(2));
                // Lấy giá của phòng (Room)
                var roomPrice = parseFloat('@Model.Price');
                // Lấy số lượng phòng
                var roomQuantity = parseInt($('.pro-qty input').val());
                // Tính tổng giá của phòng
                var roomTotal = roomPrice * roomQuantity;
                // Cộng giá của phòng vào subtotal
                subtotal += roomTotal;
                $('#total').text('$' + subtotal.toFixed(2));
                total = subtotal;
            }

            // Gọi hàm updateTotal khi trang được tải và sau mỗi lần số lượng sản phẩm thay đổi
            $(document).ready(function () {
                updateTotal();
                $('.pro-qty input').on('change', function () {
                    updateTotal();
                });
            });

       
        </script>
        
        <script type="text/javascript">
            
            


          
                $("#btnClick").click(function () {
                    
