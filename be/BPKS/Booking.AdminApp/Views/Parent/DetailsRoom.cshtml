        function Save() {
            var result = {
                
                "PartyId" : -1,
                "RoomId" : @Model.RoomId,
                "Items": [...data],
                "Total" : total
            }

            $.ajax({
                async: true,
                type: 'POST',
                url: '@Url.Action("Order", "Parent")',
                data: JSON.stringify(result),
                contentType: 'application/json; charset=utf-8',
                success: function(response) {
                    window.location.href = response.redirectToUrl;
                },
                error: function () {
                    console.error("An error occurred");
                }
            });

                    }
          

